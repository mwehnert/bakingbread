{
  "include": [
    "./src/**/*",
    "./gatsby-config.js",
    "./gatsby-node.js",
    "./gatsby-browser.js",
    "./postcss.config.js",
    "./tailwind.config.js"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["dom", "es2020"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  }
}
